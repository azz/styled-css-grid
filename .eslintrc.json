{
  "root": true,
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["prettier", "react", "import"],
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "curly": ["error"],
    "import/no-extraneous-dependencies": ["error"],
    "prefer-const": ["error"],
    "prettier/prettier": "error",
    "no-var": ["error"],
    "react/prop-types": ["off"]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
